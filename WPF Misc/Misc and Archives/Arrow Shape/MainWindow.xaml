<Window x:Class="Tomers.WPF.Shapes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:shapes="clr-namespace:Tomers.WPF.Shapes"
    
	Title="WPF Custom Shapes - Arrow" Height="300" Width="300" ResizeMode="NoResize">

	<Canvas Background="Black">
		<shapes:Arrow X1="130" Y1="130" X2="130" Y2="25" HeadWidth="15" HeadHeight="5" Stroke="Red" StrokeThickness="2.0" />
		<shapes:Arrow X1="125" Y1="135" X2="25" Y2="240" HeadWidth="35" HeadHeight="8" Stroke="Blue" StrokeThickness="4.0" />
		<shapes:Arrow X1="135" Y1="135" X2="225" Y2="150" HeadWidth="18" HeadHeight="10" Stroke="Green" StrokeThickness="6.0" />
	</Canvas>
	
</Window>
